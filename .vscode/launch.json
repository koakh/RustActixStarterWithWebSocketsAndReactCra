{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Attach to Chrome",
      "port": 9222,
      "request": "attach",
      "type": "pwa-chrome",
      "webRoot": "${workspaceFolder}/app"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug executable 'emply'",
      "cargo": {
        "args": [
          "build",
          "--bin=emply",
          "--package=emply"
        ],
        "filter": {
          "name": "emply",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug unit tests in executable 'emply'",
      "cargo": {
        "args": [
          "test",
          "--no-run",
          "--bin=emply",
          "--package=emply"
        ],
        "filter": {
          "name": "emply",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    }
  ]
}